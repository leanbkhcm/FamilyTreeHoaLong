datasource db {
  //provider = "sqlite"
  provider = "postgresql"
  url      = env("DATABASE_URL")
}




model Post {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  createdAt DateTime @default(now())
}





generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Person {
  personId    Int     @id 
  //@default(autoincrement())
  fatherId    Int 
  motherId    Int 
  name  	  String
  //birthDate	  DateTime?
  email 	  String?  @unique
  //marriages   Marriage[]
}

